<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="website_pharmacy.list">
      <field name="name">website_pharmacy list</field>
      <field name="model">website_pharmacy.website_pharmacy</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="website_pharmacy.action_window">
      <field name="name">website_pharmacy window</field>
      <field name="res_model">website_pharmacy.website_pharmacy</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="website_pharmacy.action_server">
      <field name="name">website_pharmacy server</field>
      <field name="model_id" ref="model_website_pharmacy_website_pharmacy"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="website_pharmacy" id="website_pharmacy.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="website_pharmacy.menu_1" parent="website_pharmacy.menu_root"/>
    <menuitem name="Menu 2" id="website_pharmacy.menu_2" parent="website_pharmacy.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="website_pharmacy.menu_1_list" parent="website_pharmacy.menu_1"
              action="website_pharmacy.action_window"/>
    <menuitem name="Server to list" id="website_pharmacy" parent="website_pharmacy.menu_2"
              action="website_pharmacy.action_server"/>

  </data>
</odoo>